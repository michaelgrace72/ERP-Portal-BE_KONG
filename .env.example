SERVER_HOST=0.0.0.0
SERVER_PORT=3000

# Database Configuration (Docker Internal)
DB_HOST=portal-db
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=portal_db
DB_SSLMODE=disable

# Kong Database (Internal)
KONG_PG_PASSWORD=kongpass

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=redis123
REDIS_DB=0

# RabbitMQ
RABBITMQ_HOST=rabbitmq
RABBITMQ_PORT=5672
RABBITMQ_USER=guest
RABBITMQ_PASSWORD=guest
RABBITMQ_VHOST=/

# JWT / Security
JWT_SECRET=your-super-secret-jwt-key-CHANGE-IN-PRODUCTION-min-32-chars
JWT_EXPIRY=86400
JWT_REFRESH_EXPIRY=604800
AES_KEY=change-this-32-character-key12345

# Phantom Token
PHANTOM_TOKEN_PREFIX=ref_
PHANTOM_TOKEN_EXPIRY=1800

# OAuth (Placeholder)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URL=http://localhost:8000/api/v1/auth/google/callback

# Storage
STORAGE_PROVIDER=local
LOCAL_STORAGE_PATH=./assets/uploads

CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# Env
APP_ENV=development
gin_mode=release

# Kong
KONG_PROXY_PORT=8000
KONG_ADMIN_PORT=8001
KONG_LOG_LEVEL=info

# PgAdmin
PGADMIN_EMAIL=admin@admin.com
PGADMIN_PASSWORD=admin
PGADMIN_PORT=5050

